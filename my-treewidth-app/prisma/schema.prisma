generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")ã€€
}

enum ProblemCategory {
  TrueOrFalse
  Input
  Choice
}

model Section{
  id Int @id @default(autoincrement())
  problems Problem[]
}
model Problem{
  id Int @id @default(autoincrement())
  category ProblemCategory @default(TrueOrFalse)
  questionId Int 
  sectionId Int
  section Section? @relation(fields:[sectionId], references:[id])
}

model TrueOrFalse{
  id Int @id @default(autoincrement())
  text String
  graphId Int
  graph Graph @relation(fields:[graphId],references:[id])
  treeId Int
  tree Tree @relation(fields:[treeId],references:[id])
  answer Int
  reason String
}

model Input{
  id Int @id @default(autoincrement())
  text String
  graphId Int
  graph Graph @relation(fields:[graphId],references:[id])
  treeId Int
  tree Tree @relation(fields:[treeId],references:[id])
  answer Int
  reason String
}

model Choice{
  id Int @id @default(autoincrement())
  text String
  graphId Int
  graph Graph @relation(fields:[graphId],references:[id])
  treeId Int
  tree Tree @relation(fields:[treeId],references:[id])
  answer Int
  reason String
  options ChoiceOption[]
}

model ChoiceOption {
  id        Int     @id @default(autoincrement())
  content   String
  choiceId  Int
  choice    Choice  @relation(fields: [choiceId], references: [id])
}

model Graph{ 
  id Int @id @default(autoincrement()) 
  TrueOrFalse TrueOrFalse[] 
  Input Input[] 
  Choice Choice[]
   nodes Node[] @relation("GraphNode") 
   edges Edge[] @relation("GraphEdge") 
   }
   
model Tree{ 
  id Int @id @default(autoincrement()) 
  TrueOrFalse TrueOrFalse[] 
  Input Input[] 
  Choice Choice[] 
  nodes Node[] @relation("TreeNode") 
  edges Edge[] @relation("TreeEdge") 
  
  } 
  
  model Node{ 
    id Int @id @default(autoincrement()) 
    nodeKey String 
    x Float 
    y Float 
    label String 
    graph Graph[] @relation("GraphNode") 
    tree Tree[] @relation("TreeNode") 
    edgesOut Edge[] @relation("EdgeSource") 
    edgesIn Edge[] @relation("EdgeTarget") 
    } 
    
  model Edge {
    id Int @id @default(autoincrement()) 
    edgeKey String 
    sourceId Int 
    source Node @relation("EdgeSource", fields: [sourceId], references: [id]) 
    targetId Int 
    target Node @relation("EdgeTarget", fields: [targetId], references: [id]) 
    label String 
    graph Graph[] @relation("GraphEdge") 
    tree Tree[] @relation("TreeEdge") 
  }