generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProblemCategory {
  TrueOrFalse
  Input
  Choice
}

model Section{
  id Int @id @default(autoincrement())
  problems Problem[]
}
model Problem{
  id Int @id @default(autoincrement())
  category ProblemCategory @default(TrueOrFalse)
  questionId Int 
  sectionId Int
  section Section? @relation(fields:[sectionId], references:[id])
}

model TrueOrFalse{
  id Int @id @default(autoincrement())
  text String
  graphId Int?
  graph Graph? @relation(fields:[graphId],references:[id])
  treeId Int?
  tree Tree? @relation(fields:[treeId],references:[id])
  answer Int
  reason String
}

model Input{
  id Int @id @default(autoincrement())
  text String
  graphId Int?
  graph Graph? @relation(fields:[graphId],references:[id])
  treeId Int?
  tree Tree? @relation(fields:[treeId],references:[id])
  answer Int
  reason String
}

model Choice{
  id Int @id @default(autoincrement())
  text String
  graphId Int?
  graph Graph? @relation(fields:[graphId],references:[id])
  treeId Int?
  tree Tree? @relation(fields:[treeId],references:[id])
  answer Intã€€
  answerOp ChoiceOption @relation("CorrectAnswer",fields:[answer], references:[id])
  reason String
  options ChoiceOption[] @relation("AllOptions")
}

model ChoiceOption {
  id        Int     @id @default(autoincrement())
  content   String
  choiceId  Int
  choice    Choice  @relation("AllOptions",fields: [choiceId], references: [id])
  correctAnswer Choice[] @relation("CorrectAnswer")
}

model Graph{ 
  id Int @id @default(autoincrement()) 
  TrueOrFalse TrueOrFalse[] 
  Input Input[] 
  Choice Choice[]
   nodes GraphNode[]
   edges GraphEdge[]
   }
   
  
  model GraphNode{ 
    id Int @id @default(autoincrement()) 
    nodeKey String 
    x Float 
    y Float 
    label String 
    graphId Int 
    graph Graph @relation(fields:[graphId],references:[id]) 
    edgesOut GraphEdge[] @relation("EdgeSource") 
    edgesIn GraphEdge[] @relation("EdgeTarget") 
    } 
    
  model GraphEdge {
    id Int @id @default(autoincrement()) 
    edgeKey String 
    sourceId Int 
    source GraphNode @relation("EdgeSource", fields: [sourceId], references: [id]) 
    targetId Int 
    target GraphNode @relation("EdgeTarget", fields: [targetId], references: [id]) 
    label String 
    graphId Int
    graph Graph @relation(fields:[graphId],references:[id])
  }

model Tree{ 
  id Int @id @default(autoincrement()) 
  TrueOrFalse TrueOrFalse[] 
  Input Input[] 
  Choice Choice[] 
  nodes TreeNode[] 
  edges TreeEdge[]
  
  } 

  model TreeNode{ 
    id Int @id @default(autoincrement()) 
    nodeKey String 
    x Float 
    y Float  
    label String 
    treeId Int
    tree Tree @relation(fields:[treeId],references:[id])
    edgesOut TreeEdge[] @relation("EdgeSource") 
    edgesIn TreeEdge[] @relation("EdgeTarget") 
    } 
    
  model TreeEdge {
    id Int @id @default(autoincrement()) 
    edgeKey String 
    sourceId Int 
    source TreeNode @relation("EdgeSource", fields: [sourceId], references: [id]) 
    targetId Int 
    target TreeNode @relation("EdgeTarget", fields: [targetId], references: [id]) 
    label String 
    treeId Int
    tree Tree @relation(fields:[treeId],references:[id])
  }